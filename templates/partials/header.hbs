<style>
    /* Navigation bar CSS */
.navbar {
  background-color: #333;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
}

.logo {
  font-size: 2rem;
  font-weight: bold;
  text-transform: uppercase;
  text-decoration: none;
  color: #fff;
}

.menu {
  display: flex;
  justify-content: space-between;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
}

.menu li {
  margin: 0 1rem;
}

.menu li a {
  text-decoration: none;
  color: #fff;
  transition: all 0.3s ease-in-out;
}

.menu li a:hover {
  color: #f1c40f;
}

.nav-toggle {
  display: none;
}

.nav-toggle-label {
  cursor: pointer;
  display: block;
  height: 40px;
  position: relative;
  width: 40px;
}

.nav-toggle-label span,
.nav-toggle-label span::before,
.nav-toggle-label span::after {
  background-color: #fff;
  display: block;
  height: 2px;
  position: absolute;
  width: 100%;
}

.nav-toggle-label span::before {
  top: -10px;
}

.nav-toggle-label span::after {
  bottom: -10px;
}

.nav-toggle:checked + .menu {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: #333;
  opacity: 0.95;
  z-index: 1;
  transform: translate(0, -100%);
  transition: all 0.3s ease-in-out;
}

.nav-toggle:checked + .menu li {
  opacity: 0;
}

.nav-toggle:checked + .menu li a {
  font-size: 2rem;
  color: #fff;
  margin: 2rem 0;
  opacity: 1;
  transition: all 0.3s ease-in-out;
}

.nav-toggle:checked + .menu li:nth-of-type(1) {
  transition-delay: 0.1s;
}

.nav-toggle:checked + .menu li:nth-of-type(2) {
  transition-delay: 0.2s;
}

.nav-toggle:checked + .menu li:nth-of-type(3) {
  transition-delay: 0.3s;
}

.nav-toggle:checked + .menu li:nth-of-type(4) {
  transition-delay: 0.4s;
}

</style>

<nav class="navbar">
  <a href="/news/all" class="logo">TGLabs</a>
  <input type="checkbox" id="nav-toggle" class="nav-toggle">
  <label for="nav-toggle" class="nav-toggle-label">
    <span></span>
  </label>
  <ul class="menu">
    <li><a href="/news/all">Haberler</a></li>
    <li><a href="/news/write">Haber Yaz</a></li>
    <li><a href="/tags/all">Etiketler</a></li>
    <li><a href="/tags/add">Etiket Ekle</a></li>
    {{#if user}}
        <li><a href="/logout">Çıkış Yap</a></li>
    {{else}}
        <li><a href="/login">Giriş Yap</a></li>
    {{/if}}
  </ul>
</nav>